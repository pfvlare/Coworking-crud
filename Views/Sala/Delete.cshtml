@model CRUD.Models.Sala

@{
    ViewData["Title"] = "Excluir Sala";
}

<h2 class="mt-3">Confirmar Exclusão</h2>

<h4>Tem certeza que deseja excluir esta sala?</h4>

<div class="mb-3">
    <strong>Nome:</strong> @Model.Nome<br />
    <strong>Tipo:</strong> @Model.TipoSala?.Nome
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

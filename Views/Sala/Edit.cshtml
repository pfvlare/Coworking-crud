@model CRUD.Models.Sala

@{
    ViewData["Title"] = "Editar Sala";
}

<h2 class="mt-3">Editar Sala</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome da Sala</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="TipoSalaId" class="control-label">Tipo da Sala</label>
        <select asp-for="TipoSalaId" class="form-control" asp-items="ViewBag.TipoSalaId"></select>
        <span asp-validation-for="TipoSalaId" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@model CRUD.Models.TipoSala

@{
    ViewData["Title"] = "Novo Tipo de Sala";
}

<h1>Novo Tipo de Sala</h1>

<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Capacidade" class="form-label"></label>
        <input asp-for="Capacidade" class="form-control" />
        <span asp-validation-for="Capacidade" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Preço por Hora</label> <!-- Rótulo personalizado -->
        <input asp-for="PrecoHora" class="form-control" />
        <span asp-validation-for="PrecoHora" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

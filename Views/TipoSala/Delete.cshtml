@model CRUD.Models.TipoSala

@{
    ViewData["Title"] = "Excluir Tipo de Sala";
}

<h1>Excluir Tipo de Sala</h1>

<div>
    <h4>Tem certeza que deseja excluir?</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Capacidade</dt>
        <dd class="col-sm-10">@Model.Capacidade</dd>

        <dt class="col-sm-2">Preço por Hora</dt>
        <dd class="col-sm-10">R$ @Model.PrecoHora</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

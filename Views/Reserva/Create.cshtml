@model CRUD.Models.Reserva

@{
    ViewData["Title"] = "Nova Reserva";
}

<h2 class="mt-3">Cadastrar Nova Reserva</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ClienteId" class="form-label">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId">
            <option value="">-- Selecione o cliente --</option>
        </select>
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SalaId" class="form-label">Sala</label>
        <select asp-for="SalaId" class="form-control" asp-items="ViewBag.SalaId">
            <option value="">-- Selecione a sala --</option>
        </select>
        <span asp-validation-for="SalaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DataReserva" class="form-label">Data</label>
        <input asp-for="DataReserva" class="form-control" type="date" />
        <span asp-validation-for="DataReserva" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoraInicio" class="form-label">Hora Início</label>
        <input asp-for="HoraInicio" class="form-control" type="time" />
        <span asp-validation-for="HoraInicio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoraFim" class="form-label">Hora Fim</label>
        <input asp-for="HoraFim" class="form-control" type="time" />
        <span asp-validation-for="HoraFim" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Observacoes" class="form-label">Observações</label>
        <textarea asp-for="Observacoes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {  
    @await Html.PartialAsync("_ValidationScriptsPartial")  
}

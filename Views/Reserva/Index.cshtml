@model IEnumerable<CRUD.Models.Reserva>

@{
    ViewData["Title"] = "Reservas";
}

<div class="d-flex justify-content-between align-items-center mt-3 mb-4">
    <h2 class="mb-0"><i class="bi bi-calendar-check-fill text-primary"></i> Reservas</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Nova Reserva
    </a>
</div>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Cliente</th>
            <th>Sala</th>
            <th>Data</th>
            <th>Início</th>
            <th>Fim</th>
            <th style="width: 150px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Cliente?.Nome</td>
                    <td>@item.Sala?.Nome</td>
                    <td>@item.DataReserva.ToShortDateString()</td>
                    <td>@item.HoraInicio</td>
                    <td>@item.HoraFim</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-muted">Nenhuma reserva cadastrada.</td>
            </tr>
        }
    </tbody>
</table>

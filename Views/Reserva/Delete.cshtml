@model CRUD.Models.Reserva

@{
    ViewData["Title"] = "Excluir Reserva";
}

<h2 class="mt-3">Confirmar Exclusão</h2>

<h4>Você tem certeza que deseja excluir esta reserva?</h4>

<div class="mb-3">
    <strong>Cliente:</strong> @Model.Cliente?.Nome<br />
    <strong>Sala:</strong> @Model.Sala?.Nome<br />
    <strong>Data:</strong> @Model.DataReserva.ToShortDateString()<br />
    <strong>Hora Início:</strong> @Model.HoraInicio<br />
    <strong>Hora Fim:</strong> @Model.HoraFim<br />
    <strong>Observações:</strong> @Model.Observacoes
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

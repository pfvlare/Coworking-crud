@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Ocorreu um erro</h1>
    <p class="lead">Algo inesperado aconteceu durante o processamento da sua solicitação.</p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <strong>ID da requisição:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p class="mt-4">
        Se o erro persistir, entre em contato com o suporte ou tente novamente mais tarde.
    </p>

    <a class="btn btn-outline-primary mt-3" asp-controller="Home" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Voltar ao início
    </a>
</div>
